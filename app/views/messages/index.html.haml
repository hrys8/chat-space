.wrapper

  = render 'side_bar'

  .chat
    .header
      .left-header
        %h4.left-header__group-title
          = @group.name
        .ul.left-header__group-member
          Members:
          .li ユーザー1
          .li ユーザー2
          .li ユーザー3
      .right-header
        = link_to "Edit", "#", class: 'right-header__button'
    .messages
      =render @messages
    .form
      = form_for [@group, @message], html: {id: 'form_message'} do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
